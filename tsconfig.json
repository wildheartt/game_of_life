{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@scripts/*": [
                "only-ts/scripts/*"
            ]
        },
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "types": [
            "jest",
            "node"
        ],
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true
    },
    "include": [
        "only-ts/**/*",
        "**/*.test.ts",
        "**/*.test.js",
        "**/__tests__/*.ts",
        "**/__tests__/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}